<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".AddPhotoActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-20dp"
        android:background="@drawable/iv_bg">
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="80dp" >
        <TextView
            android:text="게시글 작성"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/back"
            android:src="@drawable/iv_back"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:layout_width="15dp"
            android:layout_height="25dp" />
    </RelativeLayout>

    <View
        android:layout_below="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#B2A8BC"/>

    <LinearLayout
        android:id="@+id/editText"
        android:background="@drawable/iv_write"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="120dp"
        android:layout_width="wrap_content"
        android:layout_height="530dp" >
        <EditText
            android:id="@+id/addphoto_edit_explain"
            android:hint="내용을 입력하세요."
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menubar"
        android:orientation="horizontal"
        android:layout_marginTop="655dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <ImageView
            android:id="@+id/addphoto_image"
            android:src="@drawable/iv_photo"
            android:scaleType="fitXY"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="50dp"
            android:layout_below="@+id/toolbar_division2"
            android:layout_width="35dp"
            android:layout_height="30dp" />
        <ImageButton
            android:id="@+id/addphoto_btn_upload"
            android:src="@drawable/btn_done"
            android:scaleType="fitXY"
            android:background="@android:color/transparent"
            android:layout_toRightOf="@+id/addphoto_image"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_width="250dp"
            android:layout_height="60dp" />
    </LinearLayout>
</RelativeLayout>